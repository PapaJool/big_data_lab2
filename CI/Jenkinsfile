pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDS=credentials('mle-template')
        LC_ALL = "en_US.UTF-8"
        LANG    = "en_US.UTF-8"
        LANGUAGE = "en_US.UTF-8"
    }

    stages {
        stage('Cloning repo') {
            steps {
                echo 'Cloning repo'
                bat 'rd /s /q my-mle-template 2>null'
                bat 'git clone https://github.com/PapaJool/mle-template.git'
                bat 'cd my-mle-template'
            }
        }
        
        stage('Building docker') {
            steps {
                dir("my-mle-template") {
                    bat 'docker login -u papajool -p %DH_CREDS_PSW% docker.io'
                    bat 'docker-compose build'
                }
            }
        }
        stage('Run docker') {
            steps {
                dir("my-mle-template") {
                    bat 'docker-compose up'
                    bat 'docker-compose logs -t --tail 10'
                }
            }
        }
        stage('Push to DockerHub') {
            steps {
                dir("my-mle-template") {
                    bat 'docker push papajool/mle-template:latest'
                }
            }
        }
    }
    post {
        always {
            dir("my-mle-template") {
                bat 'docker-compose down 2>null'
                bat 'docker logout'
            }
        }
    }
}
